<%= content_for :head do %>
	<script type="text/javascript">

		$(function () {
			$('.nav-stacked li').hover(function () {
				$(this).addClass('active');
			}, function () {
				$(this).removeClass('active');
			})
		})
		
	</script>

	<style type="text/css">

		.nav {
			font-size: 18px;
		}

		.nav-pills > .active li > a:hover {
			color: white;
			background-color: #08C;
		} 
	</style>
<% end -%>

<ul class="breadcrumb">
  <li>
    <a href="/">首页</a> <span class="divider">/</span>
  </li>
  <li class="active"><%= @comic.name %></li>
</ul>
<div class='row-fluid'>

<div class='span3'>
	<div class='well sidebar-nav'>
		<ul class='nav nav-pills nav-stacked'>
			<% @comic.sections.each do |s| %>
				<% unless s.pages.blank? %>
					<li>
						<%= link_to s.name, s %>
					</li>
				<% end -%>
			<% end -%>
		</ul>
</div>

</div>


<div class='span9'>
	<div>
	<h1  style='padding-bottom: 15px'><%= @comic.name %></h1>
	<div>
		<%= image_tag @comic.cover, :style => 'float: left' %>
		<div style='float: left;padding: 15px'>
			<button class="btn btn-primary">放入书柜</button>
		</div>
	</div>


	<div  style='clear:both;padding: 15px 0'>

	<h3>简介:</h3>
	<p style='clear:both;padding: 15px'>
		<%= @comic.description %>
	   </p>
	</div>


	</div>

	<div  style='clear:both;padding: 15px 0'>

	<h3>标签:</h3>
		<div style='font-size:18px;margin:15px'>
			<% @comic.tags.each do |tag| %>
				<span>
					<%= link_to tag.name, search_comics_path(:key => tag.name) %>
				</span>
			<% end -%>
		</div>
	</div>


	</div>
