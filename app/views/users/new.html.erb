


<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <legend>注册</legend>
    <div class="control-group <%=  "error" unless @user.errors[:email].blank? %>">
    	<%= f.label :email, "邮箱", :class => 'control-label' %>
      <div class="controls">
      	<%= f.text_field :email, :class => 'input-xlarge' %>
        <p class="help-block"><%= @user.errors[:email] %></p>
      </div>
    </div>

    <div class="control-group <%=  "error" unless @user.errors[:name].blank? %>">
    	<%= f.label :name, "昵称", :class => 'control-label' %>
      <div class="controls">
      	<%= f.text_field :name, :class => 'input-xlarge' %>
        <p class="help-block"><%= @user.errors[:name] %></p>
      </div>
    </div>

    <div class="control-group <%=  "error" unless @user.errors[:password].blank? %>">
    	<%= f.label :password, "密码", :class => 'control-label' %>
      <div class="controls">
      	<%= f.password_field :password, :class => 'input-xlarge' %>
        <p class="help-block"><%= @user.errors[:password] %></p>
      </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">注册</button>
    </div>

  </fieldset>
<% end -%>